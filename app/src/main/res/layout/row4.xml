<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00AC9393">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_dish"
                android:alpha="0.3"
                app:tint="#77000000" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/bg_dish"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@drawable/willinghearts" />
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="50dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_delete"
                android:alpha="0.3"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_delete"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/delete"
                app:tint="#F75F71"
                android:padding="15dp"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="120dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contName"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:fontFamily="@font/font_dish"
                android:gravity="bottom"
                android:paddingBottom="1dp"
                android:text="Ramen"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Expires on:" />

                <TextView
                    android:id="@+id/expirydate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30 items"
                    android:textColor="#DC1313"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Description" />


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>