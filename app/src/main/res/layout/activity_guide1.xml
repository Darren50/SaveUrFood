<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Storage.guide1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Storage"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to your food storage!, here is where you can add your food into your virtual fridge! You can set the expiry date accordingly and also the description of it (the weight and more!)"
                android:textSize="25dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="600dp"
                android:layout_height="600dp"
                android:layout_gravity="center"
                android:src="@drawable/foodgif5" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This gif above will show you how to use the food storage!"
                android:textSize="25dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>